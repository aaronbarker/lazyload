root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# 4 space indentation
[**.js]
indent_style = tab
indent_size = 4

# Indentation override for all JS under lib directory
[resources/components/**.js, node_modules/**.js]
indent_style = space
indent_size = 2
